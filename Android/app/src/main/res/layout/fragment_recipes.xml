<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Home">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shrimp with Garlic"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3"
            android:textSize="50sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/texting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingredients"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3"
            android:textSize="20sp"
            android:layout_marginStart="10dp"/>
        <CheckBox
            android:id="@+id/ingredientCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shrimp"
            android:layout_marginStart="16dp"/>
        <CheckBox
            android:id="@+id/ingredientCheckBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Butter"
            android:layout_marginStart="16dp"/>
        <CheckBox
            android:id="@+id/ingredientCheckBox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Italian seasoning"
            android:layout_marginStart="16dp"/>
        <CheckBox
            android:id="@+id/ingredientCheckBox4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salt and pepper"
            android:layout_marginStart="16dp"/>

        <TextView
            android:id="@+id/textpro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Procedure"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3"
            android:textSize="20sp"
            android:layout_marginStart="10dp"/>
        <TextView
            android:id="@+id/Procedure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Blahblahblahblahblah\n2. BlahBlahBlah\n3. Blahblahblahblah"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3"
            android:textSize="14sp"
            android:layout_marginStart="16dp"/>
        <TextView
            android:id="@+id/textnot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notes"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3"
            android:textSize="20sp"
            android:layout_marginStart="10dp"/>
        <TextView
        android:id="@+id/Notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="· Blahblahblahblahblah\n· BlahBlahBlah\n· Blahblahblahblah"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textSize="14sp"
            android:layout_marginStart="16dp"/>

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/home_bottomNavBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemIconTint="@color/darkError"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>